<div class="container mt-2">
  <h4>Postings</h4>
<% if (lists.length == 0 || lists == null) { %>
    <h5>No postings yet</h5>
<% } else { %>
   <div class="row">
    <% lists.forEach( list => { %>
        <div class="col-md-4">
            <div class="card card-hover mb-4" style="width: 18rem;">
              <div class="card-header">
                <ul class="nav nav-pills card-header-pills">
                    <% if (list.status == 0) { %>  
                    <li class="nav-item">
                      <form action="/list/help/<%= list._id %>" method="post">   
                        <button class="nav-link active" type="submit">Help</button>
                      </form>
                    </li>
                    <% } else if (list.status == 1) { %> 
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pending</a>
                    </li>
                    <% } else if (list.status == 2) { %>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Fulfilled</a>
                    </li>
                    <% } %>
                </ul>
                 </div>
                <div class="card-body">
                    <h5 class="card-title">Posted by: <%= list.ownedBy.name %> </h5>
                    <% list.items.forEach( item => { %>
                      <div>
                        <span class="card-text reveal text-truncate">
                        <%= item.name %> <%= item.qty %>
                        </span>
                        </div>
                    <% }) %>  
                </div>
        </div>
    </div>
    <% }) %>
</div>
<% } %>
</div>



